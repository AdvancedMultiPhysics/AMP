export AMP_SOURCE=~/AMP/AMP
export AMP_DATA=~/AMP/AMP-Data

# Cmake configure script for debug version of AMP
/usr/local/bin/cmake      \
      -D AMP_DATA:PATH=${AMP_DATA}                                        \
      -D CMAKE_C_COMPILER:PATH=/opt/amp/packages/debug/bin/mpicc          \
      -D CMAKE_CXX_COMPILER:PATH=/opt/amp/packages/debug/bin/mpicxx       \
      -D CMAKE_Fortran_COMPILER:PATH=/opt/amp/packages/debug/bin/mpif90   \
      -D BOOST_DIRECTORY:PATH=/opt/boost_1_47_0                           \
      -D TRILINOS_DIRECTORY:PATH=/opt/amp/packages/debug/                 \
      -D PETSC_DIRECTORY:PATH=/opt/amp/packages/debug/petsc-3.0.0-p12/    \
      -D PETSC_ARCH:STRING=darwin10.4.2-c-debug                           \
      -D LIBMESH_DIRECTORY:PATH=/opt/amp/packages/debug/libmesh           \
      -D LIBMESH_HOSTTYPE:STRING=i386-apple-darwin10.4.2                  \
      -D LIBMESH_COMPILE_TYPE:STRING=dbg                                  \
      -D HYPRE_DIRECTORY:PATH=/opt/amp/packages/debug/                    \
      -D COMPILE_MODE:STRING=debug                                        \
      -D DISABLE_GXX_DEBUG:BOOL=true                                      \
      -D SUNDIALS_DIRECTORY:PATH=/opt/amp/packages/debug/                 \
      -D X11_DIRECTORY:PATH=/usr/X11/                                     \
      -D MPI_DIRECTORY:PATH=/usr/local/                                   \
      -D SILO_DIRECTORY:PATH=/opt/amp/packages/debug/                     \
      -D HDF5_DIRECTORY:PATH=/opt/amp/packages/debug/                     \
      -D ENABLE_GCOV:BOOL=true                                            \
      ${AMP_SOURCE}

