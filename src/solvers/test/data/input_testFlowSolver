// Database for all the meshes
Mesh{
    // This is the main multimesh that will contain all meshes
    MeshName = "bar"
    MeshType = "libMesh"
    FileName = "cube.with.12.boundaries.e"
    dim = 3
    x_offset = 0.0
    y_offset = 0.0
    z_offset = 0.0
    NumberOfElements = 1000
}


FlowFrapconOperator{
  name = "FlowFrapconOperator"
    InputVariable = "flow"
    OutputVariable = "flow"
    numpoints = 10
    Channel_Diameter = 0.01
    Heat_Capacity = 4179.6
    Mass_Flux     = 10
    Temp_Inlet    = 300
    Conductivity  = 0.58  
    Reynolds      = 100
    Prandtl       = 7.0
    number_of_dofs =   1
    dof_0          =   0
    value_0        = 300. 
}

FlowFrapconJacobian{
  name = "FlowFrapconJacobian"
    InputVariable = "flow"
    OutputVariable = "flow"
    numpoints = 10
    Channel_Diameter = 0.01
    Heat_Capacity = 4179.6
    Mass_Flux     = 10
    Temp_Inlet    = 300
    Conductivity  = 0.58  
    Reynolds      = 100
    Prandtl       = 7.0
    number_of_dofs =   1
    dof_0          =   0
    value_0        = 300. 
}


NonlinearSolver{
  print_info_level = 7
    max_iterations = 100
    max_error = 1e-10

    absoluteTolerance = 1.0e-9
    relativeTolerance = 1.0e-6
    stepTolerance = 1.0e-10
    maximumFunctionEvals = 100
    usesJacobian=FALSE

    SNESOptions = "-snes_monitor -snes_type ls -snes_converged_reason -snes_ksp_ew -snes_ksp_ew_version 1 -snes_ls_alpha 0.01"

    LinearSolver{
      print_info_level = 10
        max_iterations = 100
        max_error = 1e-10
        ksp_type = "fgmres"
        absolute_tolerance = 1.0e-9
        relative_tolerance = 1.0e-01
        divergence_tolerance = 1.0e03
        max_krylov_dimension = 40
        uses_preconditioner=TRUE
        pc_type = "shell"
        pc_side = "RIGHT"

        KSPOptions = "-ksp_monitor -ksp_converged_reason -ksp_max_it 100"

        Preconditioner{
          print_info_level = 1
            max_iterations = 1
            max_error = 1.0e-15
        }
    }
}

Flow1DSolver{
  print_info_level = 7
    max_iterations = 100
    max_error = 1e-10

    absoluteTolerance = 1.0e-9
    relativeTolerance = 1.0e-6
    stepTolerance = 1.0e-10
    maximumFunctionEvals = 100
    usesJacobian=FALSE

    SNESOptions = "-snes_monitor -snes_type ls -snes_converged_reason -snes_ls_alpha 1.0e-4"

    LinearSolver{
      print_info_level = 10
        max_iterations = 100
        max_error = 1e-10
        ksp_type = "fgmres"
        absolute_tolerance = 1.0e-12
        relative_tolerance = 1.0e-10
        divergence_tolerance = 1.0e03
        max_krylov_dimension = 40
        uses_preconditioner=FALSE
        pc_type = "none"
        pc_side = "RIGHT"

        KSPOptions = "-ksp_monitor -ksp_converged_reason -ksp_max_it 100"

        Preconditioner{
          print_info_level = 1
            max_iterations = 1
            max_error = 1.0e-15
        }
    }
}

