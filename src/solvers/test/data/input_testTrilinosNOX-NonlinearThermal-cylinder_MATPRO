// Sample input file to test thermal solve

Mesh{
    FileName = "halden_1_pellet_9mil.e"
    MeshType = "libMesh"
    MeshName = "Pellet"
    dim      = 3
}

NeutronicsOperator{
  name="NeutronicsRhsOperator"
    type               = "Power"
    OutputVariable     = "SpecificPowerInWattsPerKiloGram"
    numTimeSteps       = 1
    timeSteps          = .1
    useFixedValue      = TRUE
    fixedValues        = 4045.83
    print_info_level   = 3
}

VolumeIntegralOperator{
  name="VolumeIntegralOperator"
    InputVariableType = "IntegrationPointScalar"
    Number_Active_Variables = 1
    Number_Auxillary_Variables = 0
    ConstantSource   = FALSE
    ActiveInputVariables{
      ActiveVariable_0 = "SpecificPowerInWattsPerKiloGram" 
    }
  OutputVariable = "heatsource"
    print_info_level = 0
    LocalModel = "SourcePhysicsModel"
    SourceElement {
      name="SourceNonlinearElement"
        print_info_level = 3
        FE_ORDER = "FIRST"  
        FE_FAMILY = "LAGRANGE"
        QRULE_TYPE = "QGAUSS"
        QRULE_ORDER = "DEFAULT"
    }
}

SourcePhysicsModel {
  name = "SourcePhysicsModel"
    Material = "UO2_MSRZC_09"
    USE_ELEMENT_PHYSICS = "MassDensityModel"
    Equation = "ThermalSource"
    USE_MATERIALS_LIBRARY = TRUE 
    Default_Concentration = .1
    Default_Temperature   = 557.2
    Default_Burnup   = 0.0
}


NumberOfLoadingSteps = 1

testNonlinearThermalOperator {
  name="NonlinearBVPOperator"
    print_info_level = 0
    VolumeOperator = "DiffusionNonlinearFEOperator1"
    BoundaryOperator = "DirichletVectorCorrection1"
}

DiffusionNonlinearFEOperator1 {
  name = "DiffusionNonlinearFEOperator" 
    print_info_level = 0
    ActiveInputVariables {
      temperature = "temp"
    }
  OutputVariable = "temp"
    PrincipalVariable = 0 

    DiffusionElement{
      name = "DiffusionNonlinearElement"
        TransportAtGaussPoints = TRUE
        FE_ORDER = "FIRST"  
        FE_FAMILY = "LAGRANGE"
        QRULE_TYPE = "QGAUSS"
        QRULE_ORDER = "DEFAULT"
    }    

  LocalModel = "DiffusionTransportModel1"
}

DirichletVectorCorrection1 {
  name = "DirichletVectorCorrection"
    print_info_level = 0
    skip_params = FALSE
    setResidual = TRUE
    isAttachedToVolumeOperator = TRUE
    number_of_ids = 1
    id_0             = 4
    number_of_dofs_0 =   1
    dof_0_0          =   0
    value_0_0        = 557.2
}

DiffusionTransportModel1{
  name = "DiffusionTransportModel"
    Material = "UO2_MSRZC_09"
    Property = "ThermalConductivity"
    Default_Concentration = .1
    Default_Temperature   = 557.2
    Default_Burnup   = 0.0
} 

testLinearThermalOperator {
  name = "LinearBVPOperator"
    print_info_level = 0
    VolumeOperator = "DiffusionLinearFEOperator2"
    BoundaryOperator = "DirichletMatrixCorrection2"
}

DiffusionLinearFEOperator2 {
  name = "DiffusionLinearFEOperator"
    print_info_level = 0
    reset_reuses_matrix = TRUE
    InputVariable = "temp"
    OutputVariable = "temp"
    FixedConcentration = TRUE
    FixedBurnup = TRUE

    DiffusionElement {
      name = "DiffusionLinearElement"
        TransportAtGaussPoints = TRUE
        FE_ORDER = "FIRST"  
        FE_FAMILY = "LAGRANGE"
        QRULE_TYPE = "QGAUSS"
        QRULE_ORDER = "DEFAULT"
    }    

  LocalModel = "DiffusionTransportModel1"
}

DirichletMatrixCorrection2 {
  name = "DirichletMatrixCorrection"
    print_info_level = 0
    skip_params = FALSE
    skip_rhs_correction = TRUE
    number_of_ids = 1
    id_0          = 4
    number_of_dofs_0 =  1
    dof_0_0          =  0
}

NonlinearSolver{
    print_info_level = 7
    //solver = "Anderson"
    solver = "JFNK"
    max_iterations = 500
    max_error = 1e-10
    absoluteTolerance = 1e-10
    relativeTolerance = 1e-3
    stepTolerance = 1e-10
    maximumFunctionEvals = 100
    usesJacobian=FALSE

    LinearSolver{
        print_info_level = 7
        linearSolverType = "Belos"
        linearSolver = "Pseudo Block GMRES"
        //linearSolver = "Block CG"
        max_iterations = 100
        max_error = 1e-10
        ksp_type = "fgmres"
        absolute_tolerance = 1e-9
        relative_tolerance = 1e-03
        divergence_tolerance = 1e03
        max_krylov_dimension = 40
        uses_preconditioner=TRUE
        pc_type = "shell"
        pc_side = "RIGHT"

        Preconditioner{
            print_info_level = 0
            max_iterations = 3
            max_levels = 5
            max_error = 1e-15
        }
    }
}



