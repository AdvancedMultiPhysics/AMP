mpd &

mkdir $2/repo
cd $2/repo
svn co http://nstdsrv.ornl.gov/svn/amp/trunk
cd trunk/build/debug
if [ -e $1_cmake ]
then
cat ../../AMP-source/ctest.in | sed s/HOSTNAME/$1/ | sed s/BBN/$1-debug/ > ../../AMP-source/CTestConfig.cmake
ctest -E WEEKLY -S ../../AMP-source/CTestConfig.cmake -VV --debug
fi

cd ../optimized
if [ -e $1_cmake ]
then
cat ../../AMP-source/ctest.in | sed s/HOSTNAME/$1/ | sed s/BBN/$1-optimized/ > ../../AMP-source/CTestConfig.cmake
ctest -E WEEKLY -S ../../AMP-source/CTestConfig.cmake -VV --debug
fi

cd $2
rm -rf repo

